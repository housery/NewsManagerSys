<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Archetype Created Web Application</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!--映射UserServlet-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>org.news.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/util/user</url-pattern>
    </servlet-mapping>

    <!--映射TopicServlet-->
    <servlet>
        <servlet-name>TopicServlet</servlet-name>
        <servlet-class>org.news.servlet.TopicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TopicServlet</servlet-name>
        <url-pattern>/util/topics</url-pattern>
    </servlet-mapping>

    <!--映射NewsServlet-->
    <servlet>
        <servlet-name>NewsServlet</servlet-name>
        <servlet-class>org.news.servlet.NewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsServlet</servlet-name>
        <url-pattern>/util/news</url-pattern>
    </servlet-mapping>
</web-app>
